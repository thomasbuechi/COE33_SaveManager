<Window x:Class="SaveFile_Manager.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter File Prefix"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
	<StackPanel Margin="20">
		<TextBlock Text="Enter a prefix for the file:" Margin="0,0,0,10"/>
		<TextBox x:Name="InputBox" MinWidth="200"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
			<Button Content="OK" Width="60" Margin="0,0,10,0" Click="OK_Click"/>
			<Button Content="Cancel" Width="60" Click="Cancel_Click"/>
		</StackPanel>
	</StackPanel>
</Window>