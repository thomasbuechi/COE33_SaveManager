<Window x:Class="SaveFile_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveFile_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="467" Width="604"
        ResizeMode="NoResize">
    <Grid Margin="10,0,10,0" Height="428" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="423*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="305*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="backedUpFiles" Margin="91,127,91,0" Grid.RowSpan="3" Height="250" VerticalAlignment="Top"/>
        <Button x:Name="openExplorerButton" Content="Open Explorer" Margin="0,25,0,0" VerticalAlignment="Top" Height="27" Click="openExplorerButton_Click" HorizontalAlignment="Center" Width="144"/>
        <Button x:Name="refreshData" Content="Refresh" Margin="0,90,0,0" VerticalAlignment="Top" Click="refreshData_Click" Height="23" RenderTransformOrigin="-0.222,0.915" HorizontalAlignment="Center" Width="66"/>
        <Button x:Name="loadBackup" Content="Load&#xA;" Margin="425,90,91,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,6.665" Height="22" Click="loadBackup_Click"/>
        <Button x:Name="saveBackup" Content="Save" Margin="91,90,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,6.665" Height="22" Click="saveBackup_Click" HorizontalAlignment="Left" Width="66"/>
        <TextBlock Margin="91,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="154" RenderTransformOrigin="5.266,0.349" Grid.Row="2"><Run Language="en-gb" Text="Backed Up Save Files"/></TextBlock>
        <Button x:Name="deleteSelectedBackupFile" Content="Delete" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Width="50" Background="#FFE03F3F" Click="deleteSelectedBackupFile_Click" Margin="0,133,0,0"/>
    </Grid>



</Window>
