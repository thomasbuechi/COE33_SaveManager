<Window x:Class="SaveFile_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveFile_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000"
        ResizeMode="NoResize">
    <Grid Margin="0,0,68,21">
        <Grid.RowDefinitions>
            <RowDefinition Height="423*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="305*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="currentSaveFiles" Margin="0,151,523,64" Grid.RowSpan="3" Width="350" HorizontalAlignment="Right"/>
        <ListBox x:Name="backedUpFiles" Margin="0,151,-20,64" Grid.RowSpan="3" HorizontalAlignment="Right" Width="350"/>
        <TextBox x:Name="dataPath" HorizontalAlignment="Left" Margin="96,48,0,0" TextWrapping="Wrap" Text="AppdataPath" VerticalAlignment="Top" Width="276" />
        <Button x:Name="setPath" Content="Set Path" HorizontalAlignment="Left" Margin="418,48,0,0" VerticalAlignment="Top" Width="144" Height="18" Click="setPath_Click"/>
        <Button x:Name="refreshData" Content="Refresh" Margin="0,98,389,0" VerticalAlignment="Top" Click="refreshData_Click" Height="23" RenderTransformOrigin="-0.222,0.915" HorizontalAlignment="Right" Width="66"/>
        <Button x:Name="loadBackup" Content="&lt;-- Load&#xD;&#xA;" Margin="0,414,389,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,6.665" Height="22" Click="loadBackup_Click" HorizontalAlignment="Right" Width="66" Grid.RowSpan="2"/>
        <Button x:Name="saveBackup" Content="Save -&gt;" Margin="0,366,389,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,6.665" Height="22" Click="saveBackup_Click" HorizontalAlignment="Right" Width="66"/>
        <TextBlock Margin="0,130,643,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="110"><Run Language="en-gb" Text="Current Save Files"/></TextBlock>
        <TextBlock Margin="0,130,57,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="153" RenderTransformOrigin="5.266,0.349"><Run Language="en-gb" Text="Backed Up Save Files"/></TextBlock>
        <ComboBox x:Name="expeditionComboBox" SelectionChanged="expeditionComboBox_SelectionChanged" HorizontalAlignment="Left" Margin="162,105,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>



</Window>
