<Window x:Class="SaveFile_Manager.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm" Height="150" Width="300">
	<Grid>
		<TextBlock Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Top"
                   Text="Are you sure?" TextWrapping="WrapWithOverflow" Margin="0,28,0,0"
                   TextAlignment="Center" />
		<Button Content="No" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Width="75" Margin="200,0,0,10" Click="NoButton_Click"/>
		<Button Content="Yes" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Width="75" Margin="0,0,200,10" Click="YesButton_Click"/>
	</Grid>
</Window>
